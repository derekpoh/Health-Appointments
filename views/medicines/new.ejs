<%- include("../partials/header") %>


<section class="medlist">
<h1>Medicine List</h1>
<% if (medicines.length) { %>
<table id="badge-container" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Regimen</th>
            <th>Speciality</th>
        </tr>
    </thead>
    <tbody>
        <% medicines.forEach((m) => {%>
            <tr>
                <td><%= m.name %></td>
                <td><%= m.regimen %></td>
                <td><%= m.speciality %></td>
                <td id="mainpage"><a href="/medicines/<%= m._id %>/edit">Update</a></td>
                <td id="mainpage"><a href="/medicines/<%= m._id %>/delete">Delete</a></td>
            </tr>
            <% }) 
        } else { %>
            <h1 id="nomeds">No meds </h1>
       <% } %>
    </tbody>
</table>
</section>
<br><br><br><br><br><br><br><br><br><br>
<%= msg %>
<section class="medlist">
<h1>Add Medicine</h1>
<form id="add-medicine-form" action="/medicines" method="post">
    <fieldset>
        <label>Name: <input autocomplete="off" name="name" type="text"/></label>
        <br/>
        <label>Regimen: <input autocomplete="off" name="regimen" type="text"/></label>
        <br/>
        <label>Speciality:
            <select name="speciality">
              <option value="Cardiology">Cardiology</option>
              <option value="Endocrine">Endocrine</option>
              <option value="Gastroenterology">Gastroenterology</option>
              <option value="Infectious Disease">Infectious Disease</option>
              <option value="Neurology">Neurology</option>
              <option value="Pain Management">Pain Management</option>
              <option value="Nephrology">Nephrology</option>
            </select> </label>
      <br/>
      <input type="submit" value="Add">
<br><br>
  </form>
</fieldset>
</section>

<%- include("../partials/footer") %>