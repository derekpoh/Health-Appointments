<%- include("../partials/header") %>

<h1>Appointment Details</h1> 
<br/><br/>
<section>
    <div>Institution:</div>
    <div><%= appointment.institution %></div><br/>
    <div>Speciality:</div>
    <div><%= appointment.speciality %></div><br/>
    <div>Date:</div>
    <div><%= appointment.date.toDateString() %></div><br/>
    <div>Time Slot:</div>
    <div><%=appointment.timeslot  %></div>
    <br/>
</section>

<h3>Delete Appointment? (Cannot be undone)</h3>
<form method="POST" action="/appointments/<%= appointment._id %>?_method=DELETE">
    <button>Delete</button>
</form>
<a href="/appointments/<%=appointment._id%>">Cancel</a>

