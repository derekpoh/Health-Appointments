<%- include("../partials/header") %>

<h1>Appointment Details</h1> 
<br/><br/>
<section id="add-medicine-form"> 
    <div>Institution:</div>
    <div><%= appointment.institution %></div><br/>
    <div>Speciality:</div>
    <div><%= appointment.speciality %></div><br/>
    <div>Date:</div>
    <div><%= appointment.date.toDateString() %></div><br/>
    <div>Time Slot:</div>
    <div><%=appointment.timeslot  %></div>
    <br/>
    
    <h3>Delete Appointment? (Cannot be undone)</h3>
    <form method="POST" action="/appointments/<%= appointment._id %>?_method=DELETE" id="form">
        <input type="submit" value="Delete">
    </form>
    <button><a href="/appointments/<%=appointment._id%>" style="text-decoration:none">Cancel</a></button>
</section>

<%- include("../partials/footer") %>