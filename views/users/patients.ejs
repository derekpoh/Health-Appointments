<%- include("../partials/header") %>

<section class="medlist">
    <h1>Patient List</h1>
    <% if (patients.length) { %>
    <table  id="badge-container">
        <thead>
            <tr>
                <th>PATIENT NAME</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach((p) => {%>
                <tr>
                    <td><%= p.userid %></td>
                    <td>
                        <nav>
                        <a href="/users/patients/<%= p._id %>" >
                            SELECT
                        </a>
                    </nav>
                    </td>
                <% }) 
            } else { %>
                <h1 id="nomeds">No patients</h1>
           <% } %>
        </tbody>
    </table>
    </section>

<%- include("../partials/footer") %>